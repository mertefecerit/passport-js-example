<div class="container-fluid bg-indigo">
    <div class="row vh-100 justify-content-center align-items-center">
        <div class="col-lg-10">
            <div class="rounded bg-white shadow-sm">
                <div class="row gx-0">
                    <div class="col-lg-6 d-none d-lg-block">
                        <img class="img-fluid rounded-start" src="https://source.unsplash.com/random/600x670">
                    </div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <h3 class="text-center mb-4">Create an Account!</h3>
                            <% if (success[0]) { %>
                             <div class="alert alert-success alert-dismissible fade show" role="alert">
                                 <p class="mb-0"><%= success %> </p>
                             </div>
                            <% } %> 
                            <% if (fail[0]) { %>
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <p class="mb-0"><%= fail %> </p>
                                </div>
                               <% } %> 
                            <% if (errors[0]) { %>
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <ul class="mb-0">
                                        <% errors[0].forEach(error => { %>
                                            <li><%= error.msg %> </li>
                                        <% }) %>
                                    </ul>
                                </div>
                            <% } %>
                            <form action="/user/register-process" method="post">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-6">
                                            <input type="text" name="first_name" class="form-control mb-2 rounded-pill p-3" placeholder="First Name">
                                        </div>
                                        <div class="col-6">
                                            <input type="text" name="last_name" class="form-control mb-2 rounded-pill p-3" placeholder="Last Name">
                                        </div>
                                        <div class="col-12">
                                            <input type="email" name="email" class="form-control mb-2 rounded-pill p-3" placeholder="Email Address">
                                        </div>
                                        <div class="col-6">
                                            <input type="password" name="password" class="form-control mb-2 rounded-pill p-3" placeholder="Password">
                                        </div>
                                        <div class="col-6">
                                            <input type="password" name="re_password" class="form-control mb-2 rounded-pill p-3" placeholder="Repeat Password">
                                        </div>
                                    </div>
                                </div>
                                <hr>
                                <button type="submit" class="btn w-100 fw-bold btn-primary rounded-pill p-3 fs-5"><i class="fas fa-user-plus"></i> Create an Account</button>
                            </form> 
                            <hr>
                            <button class="btn w-100 btn-danger rounded-pill mb-2 p-2"><i class="fab fa-google"></i> Register with Google</button>
                            <button class="btn w-100 btn-primary rounded-pill p-2"><i class="fab fa-facebook"></i> Register with Facebook</button>
                            <hr>
                            <small class="w-100 d-inline-block text-center"><a href="/user/forgot-password">Forgot Password ?</a></small>
                            <small class="w-100 d-inline-block text-center"><a href="/user/login">Already have an account? Login!</a></small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>